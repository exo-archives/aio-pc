<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.exoplatform.services.config.ConfigurationData"
        table="EXO_SERVICE_CONFIG"
    >
        <cache usage="read-write" />

        <id
            name="serviceType"
            column="serviceType"
            type="java.lang.String"
            unsaved-value="null"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ConfigurationDataImpl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="data"
            type="org.exoplatform.services.database.impl.TextClobType"
            update="true"
            insert="true"
            column="data"
            length="65535"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ConfigurationDataImpl.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
