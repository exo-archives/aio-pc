        <executions>
          <!-- Generate sources for WSRP 1 -->
          <execution>
            <id>generate-sources-1</id>
            <phase>generate-sources</phase>
            <configuration>
              <sourceRoot>${src.gen.dir}</sourceRoot>
              <wsdlOptions>
                <wsdlOption>
                  <wsdl>${basedir}/wsdl1/wsrp_service.wsdl</wsdl>
                  <extraargs>
                    <extraarg>-validate</extraarg>
                    <extraarg>-all</extraarg>
                    <!--                                        <extraarg>-client</extraarg> -->
                    <!--                                        <extraarg>-server</extraarg>-->
                    <extraarg>-compile</extraarg>
                    <extraarg>-p</extraarg>
                    <extraarg>urn:oasis:names:tc:wsrp:v1:types=org.exoplatform.services.wsrp1.type</extraarg>
                    <extraarg>-p</extraarg>
                    <extraarg>urn:oasis:names:tc:wsrp:v1:intf=org.exoplatform.services.wsrp1.intf</extraarg>
                    <extraarg>-p</extraarg>
                    <extraarg>urn:oasis:names:tc:wsrp:v1:bind=org.exoplatform.services.wsrp1.bind</extraarg>
                    <extraarg>-p</extraarg>
                    <extraarg>urn:oasis:names:tc:wsrp:v1:wsdl=org.exoplatform.services.wsrp1.wsdl</extraarg>
                    <!--                                        <extraarg>-sn</extraarg>-->
                    <!--                                        <extraarg>WSRPService</extraarg>-->
                    <!--                                        <extraarg>-nexclude</extraarg>-->
                    <!--                                        <extraarg>urn:oasis:names:tc:wsrp:v2:types=org.exoplatform.services.wsrp2.type</extraarg>-->
                    <!--                                        <extraarg>-b</extraarg>-->
                    <!--                                        <extraarg>${basedir}/wsdl/binding.xml</extraarg>-->
                  </extraargs>
                </wsdlOption>
              </wsdlOptions>
            </configuration>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
          </execution>
