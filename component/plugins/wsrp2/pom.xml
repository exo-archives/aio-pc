                  <classes dir="target/test-classes">
                    <exclude name="wsrp2/**/*" />
                  </classes>
                  <zipfileset dir="war_template2/WEB-INF" includes="**/*" prefix="WEB-INF" />
                </war>
              </tasks>
            </configuration>
            <goals>
