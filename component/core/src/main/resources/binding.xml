<binding>
 <mapping name="description" class="org.exoplatform.services.portletcontainer.pci.model.Description">
  	<value name="lang" field="lang" get-method="getLang" set-method="setLang" />
  	<value name="description" field="description" get-method="getDescription" set-method="setDescription" />
  </mapping>
  
  <mapping name="display-name" class="org.exoplatform.services.portletcontainer.pci.model.DisplayName">
  	<value name="lang" field="lang" get-method="getLang" set-method="setLang" />
  	<value name="display-name" field="displayName" get-method="getDisplayName" set-method="setDisplayName" />
  </mapping>
  
  <mapping name="init-param" class="org.exoplatform.services.portletcontainer.pci.model.InitParam">
    <collection item-type="org.exoplatform.services.portletcontainer.pci.model.Description" 
  							field = "description" value-type="element"/>  							
  	<value name="name" field="name" get-method="getName" set-method="setName" />
  	<value name="value" field="value" get-method="getValue" set-method="setValue" />
  </mapping>
  
  <mapping name="supports" class="org.exoplatform.services.portletcontainer.pci.model.Supports">
  	<value name="mime-type" field="mimeType" get-method="getMimeType" set-method="setMimeType" />
  	<collection field = "portletMode" value-type="element"/>
  </mapping>
  
  <mapping name="security-role-ref" class="org.exoplatform.services.portletcontainer.pci.model.SecurityRoleRef">
  	<value name="role-name" field="roleName" get-method="getRoleName" set-method="setRoleName" />
  	<value name="role-link" field="roleLink" get-method="getRoleLink" set-method="setRoleLink" />
  </mapping>
  
  <mapping name="filter" class="org.exoplatform.services.portletcontainer.pci.model.Filter">
  	<value name="filter-name" field="filterName" get-method="getFilterName" set-method="setFilterName" />
  	<value name="filter-class" field="filterClass" get-method="getFilterClass" set-method="setFilterClass" />
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.InitParam" 
						  	field = "initParam" value-type="element" />
  </mapping>  
 
  <mapping name="custom-portlet-mode" class="org.exoplatform.services.portletcontainer.pci.model.CustomPortletMode">
	  <collection item-type="org.exoplatform.services.portletcontainer.pci.model.Description" 
  							field = "description" usage="optional" value-type="element" />  							
  	<value name="portlet-mode" field="portletMode" get-method="getPortletMode" set-method="setPortletMode" />						  
  </mapping>

	<mapping name="custom-window-state" class="org.exoplatform.services.portletcontainer.pci.model.CustomWindowState">
	  <collection item-type="org.exoplatform.services.portletcontainer.pci.model.Description" 
  							field = "description" usage="optional" value-type="element" />  							
  	<value name="window-state" field="windowState" get-method="getWindowState" set-method="setWindowState" />						  
  </mapping>
    
  <mapping name="portlet-info" class="org.exoplatform.services.portletcontainer.pci.model.PortletInfo">
    <value name="title" field="title" get-method="getTitle" set-method="setTitle" />
    <value name="shortTitle" field="shortTitle" get-method="getShortTitle" set-method="setShortTitle" usage="optional"/>
    <value name="keywords" field="keywords" get-method="getKeywords" set-method="setKeywords" />
  </mapping>
  
    <mapping name="exo-portlet-preference" 
    				 class="org.exoplatform.services.portletcontainer.pci.model.ExoPortletPreferences">
			<value name="preferences-validator"          field="preferencesValidator" 
 						 get-method="getPreferencesValidator"  set-method="setPreferencesValidator" />    				 
  </mapping>


  <mapping class="org.exoplatform.services.portletcontainer.pci.model.Portlet"  name="portlet" ordered="false">
  	<value name="portlet-name" field="portletName" get-method="getPortletName" set-method="setPortletName" usage="optional" />
  	<value name="portlet-class" field="portletClass" get-method="getPortletClass" set-method="setPortletClass" usage="optional" />
  	<value name="expiration-cache" field="expirationCache" get-method="getExpirationCache" set-method="setExpirationCache" usage="optional" />
  	<value name="resource-bundle" field="resourceBundle" get-method="getResourceBundle" set-method="setResourceBundle" usage="optional" />
  	<value name="global-cache" field="globalCache" get-method="getGlobalCache" set-method="setGlobalCache" usage="optional" />
  	<value name="id" field="id" get-method="getId" set-method="setId" usage="optional"/>
  	
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.Description" 
  							name="description" field = "description" usage="optional" value-type="element" />
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.DisplayName" 
  							name="display-name" field = "displayName" usage="optional" value-type="element"/>
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.InitParam" 
						  	name="init-param" field = "initParam" usage="optional" value-type="element" />
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.Supports" 
						  	name="supports" field = "supports" usage="optional" value-type="element" />
						  	
  	<collection field = "supportedLocale" usage="optional" value-type="element" />
  	
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.SecurityRoleRef"
  							name="security-ref" field = "securityRoleRef" usage="optional" value-type="element"/>
  	<collection item-type="org.exoplatform.services.portletcontainer.pci.model.Filter"
  							name="filter" field = "filter" usage="optional" value-type="element" />
  	
  	<structure map-as="org.exoplatform.services.portletcontainer.pci.model.PortletInfo" usage="optional"/>
  	<structure map-as="org.exoplatform.services.portletcontainer.pci.model.ExoPortletPreferences" usage="optional"/>
  	
  </mapping>
  
    
  <mapping name="portlet-app" class="org.exoplatform.services.portletcontainer.pci.model.PortletApp" ordered="false">
  
    <collection item-type="org.exoplatform.services.portletcontainer.pci.model.Portlet" 
                name="portlet" field="portlet" usage="optional" value-type="element" />
  </mapping>
</binding>
