<?xml version="1.0" encoding="UTF-8"?>

<portlet-app id="sbridgestrutsportlet"
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

  <portlet id="StrutsPortlet">
    <description>The Sample Bridge Struts Portlet</description>
    <portlet-name>SampleBridgeStrutsPortlet</portlet-name>
    <display-name>Sample Bridge Struts Portlet</display-name>
    <portlet-class>org.apache.portals.bridges.struts.StrutsPortlet</portlet-class>
    <init-param>
      <name>ServletContextProvider</name>
      <value>org.exoplatform.ServletContextProviderImpl</value>
    </init-param>
    <init-param>
      <name>ViewPage</name>
      <value>/view.do</value>
    </init-param>
    <init-param>
      <name>EditPage</name>
      <value>/edit.do</value>
    </init-param>
    <init-param>
      <name>StrutsPortletConfigLocation</name>
      <value>WEB-INF/struts-portlet-config.xml</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
      <portlet-mode>EDIT</portlet-mode>
    </supports>
    <portlet-info>
      <title>StrutsPortlet</title>
      <keywords>Struts,demo,bridge</keywords>
    </portlet-info>
  </portlet>

</portlet-app>

