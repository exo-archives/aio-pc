<?xml version='1.0'?>
<!DOCTYPE policy PUBLIC "-//JBoss//DTD JBOSS Security Config 3.0//EN"
                        "http://www.jboss.org/j2ee/dtd/security_config.dtd">
<policy>
  <application-policy name="exo-domain">
    <authentication>
      <login-module code="org.exoplatform.frameworks.portletcontainer.access.StandaloneJAASLoginModule" flag="required"></login-module>
      <login-module code="org.exoplatform.frameworks.portletcontainer.access.StandaloneBroadcastJAASLoginModule" flag="required"></login-module>
    </authentication>
  </application-policy>
</policy>
