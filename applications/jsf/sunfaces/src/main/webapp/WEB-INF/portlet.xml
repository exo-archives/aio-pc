<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

<portlet>
  <description xml:lang="en">SunFaces Portlet</description>
  <portlet-name>ssunfacesportlet</portlet-name>
  <display-name xml:lang="en">SunFaces Portlet</display-name>
	<!-- native sun impl -->
	<portlet-class>com.sun.faces.portlet.FacesPortlet</portlet-class>
	<!-- exo impl 
	<portlet-class>org.exoplatform.portlet.faces.ExoFacesPortlet</portlet-class>
	-->
	<!-- native sun impl -->
	<init-param>
		<name>com.sun.faces.portlet.INIT_VIEW</name>
		<value>/index.jsp</value>
	</init-param>
	<!-- exo impl
	<init-param>
    <name>default-view</name>
    <value>/index.jsp</value>
  </init-param>
	-->
	<supports>
		<mime-type>text/html</mime-type>
		<portlet-mode>VIEW</portlet-mode>
	</supports>
	<supported-locale>en</supported-locale>
  <portlet-info>
    <title>SunFaces Portlet</title>
    <short-title>SunFaces Portlet</short-title>
    <keywords>SunFaces Portlet</keywords>
  </portlet-info>
  <security-role-ref>
    <role-name>admin</role-name>
    <role-link>admin</role-link>
  </security-role-ref>
  <security-role-ref>
    <role-name>user</role-name>
    <role-link>user</role-link>
  </security-role-ref>
</portlet>
	
</portlet-app>