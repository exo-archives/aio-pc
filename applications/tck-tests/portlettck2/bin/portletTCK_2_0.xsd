<xs:schema targetNamespace="http://java.sun.com/xml/ns/portlet/portletTCK_2_0.xsd" elementFormDefault="qualified" attributeFormDefault="unqualified" xmlns:pct="http://java.sun.com/xml/ns/portlet/portletTCK_2_0.xsd" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="pct_test_cases">
		<xs:annotation>
			<xs:documentation>Test Cases defined in Portlet Compatibility Kit</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="pct:test_case" minOccurs="1" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="test_case">
		<xs:annotation>
			<xs:documentation>Test Case</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="pct:test_name" maxOccurs="1" minOccurs="1"/>
				<xs:element ref="pct:test_portlet" minOccurs="1" maxOccurs="unbounded"/>
				<xs:element ref="pct:event-definition" maxOccurs="unbounded" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="test_portlet">
		<xs:annotation>
			<xs:documentation>A test Portlet</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="pct:portlet_name" minOccurs="1"/>
				<xs:element ref="pct:app_name" minOccurs="1"/>
				<xs:element ref="pct:default-namespace" minOccurs="0" maxOccurs="1"/>
				<xs:element ref="pct:supported-processing-event" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element ref="pct:supported-publishing-event" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="test_name" type="xs:string">
		<xs:annotation>
			<xs:documentation>Unique name for a test case</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:element name="app_name" type="xs:string">
		<xs:annotation>
			<xs:documentation>Name of the portlet application a portlet belongs to.</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:element name="portlet_name" type="xs:string">
		<xs:annotation>
			<xs:documentation>Name of the portlet</xs:documentation>
		</xs:annotation>
	</xs:element>
	<xs:element name="default-namespace" type="xs:string">
		<xs:annotation>
			<xs:documentation>Default Namespace</xs:documentation>
		</xs:annotation>
	</xs:element>

	<xs:element name="event-definition">
		<xs:annotation>
			<xs:documentation>
				Event Definition for supported or publishing event.
			</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="description" type="xs:string" minOccurs="0" maxOccurs="1"/>
				<xs:choice>
					<xs:element name="qname" type="xs:QName"/>
					<xs:element name="name" type="xs:string"/>
				</xs:choice>
				<xs:element name="alias" type="xs:QName" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element name="value-type" type="xs:string" minOccurs="0"/>
			</xs:sequence>
			<xs:attribute name="id" type="xs:string" use="optional"/>
		</xs:complexType>
	</xs:element>

	<xs:element name="supported-processing-event">
		<xs:annotation>
			<xs:documentation>
				Supported processing events
			</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:choice>
					<xs:element name="qname" type="xs:QName"/>
					<xs:element name="name" type="xs:string"/>
				</xs:choice>
			</xs:sequence>
			<xs:attribute name="id" type="xs:string" use="optional"/>
		</xs:complexType>
	</xs:element>
	
	<xs:element name="supported-publishing-event">
		<xs:annotation>
			<xs:documentation>
				Supported processing events
			</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:choice>
					<xs:element name="qname" type="xs:QName"/>
					<xs:element name="name" type="xs:string"/>
				</xs:choice>
			</xs:sequence>
			<xs:attribute name="id" type="xs:string" use="optional"/>
		</xs:complexType>
	</xs:element>
</xs:schema>
