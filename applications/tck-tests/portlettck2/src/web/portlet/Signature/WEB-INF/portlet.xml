<?xml version="1.0" encoding="UTF-8"?>

<portlet-app id="portlet_jp_sig_web"
xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://hnsp.inf-bb.uni-jena.de/spec/JSR%202.0%20API/portlet-app_2_0.xsd">





    <!-- *************************************************************** -->
    <!-- *                                                             * -->
    <!-- * Portlet Application specific                                * -->
    <!-- *                                                             * -->
    <!-- *************************************************************** -->
    
    <!-- *************************************************************** -->
    <!-- *                                                             * -->
    <!-- * Portlet: SignatureTestPortlet							   * -->
    <!-- *                                                             * -->
    <!-- *************************************************************** -->
    <portlet>
        <portlet-name>SignatureTestPortlet</portlet-name>
        <portlet-class>com.sun.ts.tests.portlet.Signature.SignatureTestPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
       <supports>
         <mime-type>text/html</mime-type>
       </supports>
        <portlet-info>
                <title>SignatureTestPortlet</title>
                <short-title>SignatureTestPortlet</short-title>
        </portlet-info>
    </portlet>

	<filter>
    	<filter-name>Filter</filter-name>
    	<filter-class>com.sun.ts.tests.portlet.Signature.Filter</filter-class>
    	<lifecycle>ACTION_PHASE</lifecycle>
    	<lifecycle>RENDER_PHASE</lifecycle>
    	<lifecycle>RESOURCE_PHASE</lifecycle>
    </filter>
    
    <filter-mapping>
    	<filter-name>Filter</filter-name>
    	<portlet-name>SignatureTestPortlet</portlet-name>
    </filter-mapping>
</portlet-app>
