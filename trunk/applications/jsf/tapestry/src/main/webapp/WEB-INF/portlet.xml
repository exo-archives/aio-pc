<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0"
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

  <portlet>
    <description xml:lang="en">Tapestry Portlet</description>
    <portlet-name>stapestryportlet</portlet-name>
    <display-name xml:lang="en">Tapestry Portlet</display-name>
    
    <portlet-class>org.apache.tapestry.portlet.ApplicationPortlet</portlet-class>
    
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>
    <portlet-info>
      <title>Tapestry Portlet</title>
      <short-title>Tapestry Portlet</short-title>
      <keywords>Tapestry Portlet</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>admin</role-name>
      <role-link>admin</role-link>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
      <role-link>user</role-link>
    </security-role-ref>
  </portlet>

</portlet-app>